<% layout("/layout/boilerplate.ejs") %>

    <form>
        <% for(let data of alldata){ %>
            <div class="message">


                <div class="name">
                    <img src="/image/Hashtag-Music-Logo.jpg" style="width:50px" alt="">
                    <h2>
                        <%=data.name%>
                    </h2>
                    <form  method="POST" action="/home/contact/message/<%= data._id %>?_method=DELETE">
                        <button class="btn delete">Delete</button>
                    </form>

                </div>
                <div class="email">
                    <h5>
                        <%=data.email%>
                    </h5>
                </div>
                <div class="para" style="margin:10px 0 5px 50px ;background-color: rgba(238, 130, 238, 0.504); border-radius: 30px; width: 90%; color: rgb(31, 18, 18); font-size: 24px;">
                    <p>
                        <%=data.message%>
                    </p>
                </div>
            </div>
        <%}%>
        
    </form>